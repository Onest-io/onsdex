{
  "name": "btsdex",
  "version": "0.7.0",
  "description": "Package for work with BitShares DEX",
  "main": "index.js",
  "bin": {
    "btsdex": "./cli.js"
  },
  "scripts": {
    "dev": "nodemon --exec 'npm' run build --watch src",
    "prebuild": "rm lib -rf",
    "build": "babel src -d lib",
    "postbuild": "npm run browserify",
    "prebrowserify": "rm build -rf",
    "browserify": "browserify --full-paths index.js --standalone BitShares -o build/btsdex.js -d",
    "postbrowserify": "minify build/btsdex.js -o build/btsdex.min.js",
    "test": "mocha --timeout 10000"
  },
  "keywords": [
    "bitshares"
  ],
  "author": "scientistnik",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.1.2",
    "bignumber.js": "^7.2.1",
    "bitsharesjs": "^1.8.0",
    "lzma": "^2.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "babel-minify": "^0.5.0",
    "browserify": "^16.2.2",
    "dotenv": "^6.0.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.10"
  }
}
